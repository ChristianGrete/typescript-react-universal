{
  "name": "typescript-react-universal",
  "version": "1.0.0",
  "description": "TypeScript React Universal",
  "main": "index.js",
  "author": {
    "name": "Reed Dadoune",
    "email": "reed@dadoune.com",
    "url": "https://www.dadoune.com"
  },
  "license": "MIT",
  "scripts": {
    "start": "./dev-server",
    "build": "npm run ts:lint && rm -rf ./dist && npm run webpack:build",
    "precommit": "lint-staged",
    "prettier": "yarn run prettier:ts && yarn run prettier:js",
    "prettier:ts": "prettier --single-quote --trailing-comma all --write \"./{src,webpack}/**/*.{ts,tsx}\"",
    "prettier:js": "prettier --single-quote --trailing-comma es5 --write \"./{src,webpack}/**/*.{js,jsx}\" dev-server.js",
    "ts:lint": "tslint -c tslint.json -p tsconfig.json",
    "webpack:build": "webpack --config ./webpack/webpack.config.js"
  },
  "lint-staged": {
    "*.{ts,tsx}": ["prettier --single-quote --trailing-comma all --write", "git add"],
    "*.{js,jsx}": ["prettier --single-quote --trailing-comma es5 --write", "git add"]
  },
  "dependencies": {
    "clean-css": "^4.1.3",
    "compression": "^1.6.2",
    "consolidate": "^0.14.5",
    "express": "^4.15.3",
    "express-minify-html": "^0.11.4",
    "lodash": "^4.17.4",
    "pug": "^2.0.0-rc.2",
    "react": "^15.5.4",
    "react-dom": "^15.5.4",
    "react-jss": "^6.1.1",
    "react-redux": "^5.0.5",
    "redux-observable": "^0.14.1",
    "request": "^2.81.0",
    "request-promise": "^4.2.1",
    "rx": "^4.1.0",
    "rxjs": "^5.4.0"
  },
  "devDependencies": {
    "@types/clean-css": "^3.4.30",
    "@types/compression": "^0.0.33",
    "@types/express": "^4.0.35",
    "@types/react": "^15.0.27",
    "@types/react-dom": "^15.5.0",
    "@types/react-redux": "^4.4.42",
    "awesome-typescript-loader": "^3.1.3",
    "babel-core": "^6.24.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "browser-sync": "^2.18.12",
    "copy-webpack-plugin": "^4.0.1",
    "gulp-nodemon": "^2.2.1",
    "husky": "^0.13.4",
    "lint-staged": "^3.6.1",
    "nodemon": "^1.11.0",
    "prettier": "^1.4.4",
    "tslint": "^5.4.2",
    "tslint-react": "^3.0.0",
    "typescript": "^2.3.4",
    "webpack": "^2.6.1",
    "webpack-node-externals": "^1.6.0"
  }
}
